<p id="notice"><%= notice %></p>

<h1>My Cars</h1>
<br>
<table>
  <thead>
    <tr>
      <th>Model</th>
      <th>Chassis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.model %></td>
        <td><%= car.chassis %></td>
        <td><%= link_to 'Details', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Remove', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a New Car', new_car_path %>


